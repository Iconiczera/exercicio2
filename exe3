public class Aluno {
    private String nome;
    private int idade;
    private String matricula;

    // Construtor da classe Aluno
    public Aluno(String nome, int idade, String matricula) {
        this.nome = nome;
        this.idade = idade;
        this.matricula = matricula;
    }

    // Getter para o atributo nome
    public String getNome() {
        return nome;
    }

    // Setter para o atributo nome
    public void setNome(String nome) {
        this.nome = nome;
    }

    // Getter para o atributo idade
    public int getIdade() {
        return idade;
    }

    // Setter para o atributo idade
    public void setIdade(int idade) {
        this.idade = idade;
    }

    // Getter para o atributo matricula
    public String getMatricula() {
        return matricula;
    }

    // Setter para o atributo matricula
    public void setMatricula(String matricula) {
        this.matricula = matricula;
    }

    public static void main(String[] args) {
        // Criação de uma instância da classe Aluno
        Aluno aluno = new Aluno("Carlos", 20, "2024INF123");

        // Utilizando os getters para exibir os valores dos atributos
        System.out.println("Nome: " + aluno.getNome());
        System.out.println("Idade: " + aluno.getIdade());
        System.out.println("Matrícula: " + aluno.getMatricula());

        // Modificando alguns atributos utilizando os setters
        aluno.setNome("Ana");
        aluno.setIdade(21);

        // Utilizando novamente os getters para exibir os valores atualizados
        System.out.println("Nome atualizado: " + aluno.getNome());
        System.out.println("Idade atualizada: " + aluno.getIdade());
        System.out.println("Matrícula: " + aluno.getMatricula());
    }
}
